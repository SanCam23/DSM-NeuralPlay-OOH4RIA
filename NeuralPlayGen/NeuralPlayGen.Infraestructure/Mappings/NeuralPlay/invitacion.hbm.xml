<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="NeuralPlayGen.Infraestructure"
		                   namespace="NeuralPlayGen.Infraestructure.EN.NeuralPlay">
		    
		    
			
				<class name="InvitacionNH" table="Invitacion"> 
				  	
						<id name="Id" column="idInvitacion" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Tipo" > 
						<column name="tipo"  not-null="true"/>
					</property>
					<property name="Estado" > 
						<column name="estado"  not-null="true"/>
					</property>
					<property name="FechaEnvio" type="date"> 
						<column name="fechaEnvio"  not-null="true"/>
					</property>
			
			
			
			
			
			
		  			
					
							   <one-to-one name="Comunidad" class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.ComunidadNH" property-ref="Invitacion" />							
					 
						
			
		  			
						<many-to-one name="Equipo" class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.EquipoNH" >	
								<column name="FK_idEquipo_idEquipo"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="Emisor" class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.UsuarioNH" >	
								<column name="FK_idUsuario_idUsuario"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="Receptor" table="[invitacion_0_usuario]"  >
							<key>
								
									<column name="FK_idInvitacion_idInvitacion_0"/> 
							</key>
      						<many-to-many class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.UsuarioNH">
									<column name="FK_idUsuario_idUsuario"/> 
      						</many-to-many>
    					</bag>
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="InvitacionNHReadAllHQL">from InvitacionNH</query>
		</hibernate-mapping>
	