<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="NeuralPlayGen.Infraestructure"
		                   namespace="NeuralPlayGen.Infraestructure.EN.NeuralPlay">
		    
		    
			
				<class name="PublicacionNH" table="Publicacion"> 
				  	
						<id name="Id" column="idPublicacion" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Contenido" type="string"> 
						<column name="contenido"  not-null="true"/>
					</property>
					<property name="FechaCreacion" type="date"> 
						<column name="fechaCreacion"  not-null="true"/>
					</property>
					<property name="FechaEdicion" type="date"> 
						<column name="fechaEdicion"  not-null="true"/>
					</property>
			
			
			
			
			
			
		  			
						<many-to-one name="Comunidad" class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.ComunidadNH" >	
								<column name="FK_idComunidad_idComunidad"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="Comentario" cascade="delete">
							<key>
							
								
								<column name="FK_idPublicacion_idPublicacion"/>
					      	</key>
							<one-to-many class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.ComentarioNH"/>
					    </bag>
					
			
		  			
						<bag name="Reaccion" cascade="delete">
							<key>
							
								
								<column name="FK_idPublicacion_idPublicacion"/>
					      	</key>
							<one-to-many class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.ReaccionNH"/>
					    </bag>
					
			
		  			
						<bag name="Notificacion" >
							<key>
							
								
								<column name="FK_idPublicacion_idPublicacion"/>
					      	</key>
							<one-to-many class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.NotificacionNH"/>
					    </bag>
					
			
		  			
						<many-to-one name="Usuario" class="NeuralPlayGen.Infraestructure.EN.NeuralPlay.UsuarioNH" >	
								<column name="FK_idUsuario_idUsuario"/> 
						</many-to-one>
											 					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="PublicacionNHReadAllHQL">from PublicacionNH</query>
		</hibernate-mapping>
	